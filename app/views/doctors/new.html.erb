<h1 class="ui center aligned icon header">
  <i class="user md icon"></i>
  Add Doctor
</h1>

<%= form_with(model: @doctor, local: true, class: "ui form" ) do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, autofocus: true %>
  </div>
  <br />
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true %>
  </div>
  <br />

  <%= f.submit nil, class: 'ui green button' %>
<% end %>