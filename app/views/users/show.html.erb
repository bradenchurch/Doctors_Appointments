<h1>Users</h1>

  
<h1><%= @user.full_name %></h1>
<hr />
<h2>Doctors</h2>
<ul>
  <% @user.doctors.each do |doctor| %>
    <li>
      <%= link_to doctor.name, doctor %>
    </li>
    <% end %>
</ul>
<ul>
    <% @user.appointments.each do |appointment| %>
      <%= link_to appointment.date, appointment %>
  <% end %>
</ul>
<br />
<%= link_to 'Delete User', @user, method: :delete, class: 'ui red button' %>