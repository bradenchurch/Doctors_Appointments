<h1 class="ui center aligned icon header">
  <i class="plus square outline icon"></i>
  Add User
</h1>

<%= form_with(model: @user, local: true, class: "ui form" ) do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true %>
  </div>

  <div class="field">
  <%= f.label :age %>
  <%= f.text_field :age, required: true %>
<br />
  <div class="field">
  <%= f.label :gender %>
  <%= f.text_field :gender, required: true %>
  <br />
  
  <%= f.submit nil, class: 'ui green button' %>
<% end %>
